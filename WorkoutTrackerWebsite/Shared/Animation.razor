@using System.Globalization
@using Microsoft.Extensions.Options

<span data-aos-once="true" data-aos="@_animationName" data-aos-delay="@_delay" data-aos-duration="@_duration">
    @ChildContent
</span>
@code {
    string _animationName = "";
    string _delay = "";
    string _duration = "";
    string _once = "false";

    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string AnimationNameSelect { get; set; }
    [Parameter]
    public string AnimationDurationSet { get; set; }
    [Parameter]
    public string AnimationDelaySet { get; set; }
    [Parameter]
    public string AnimationHappensOnce { get; set; }

    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(AnimationNameSelect))
        {
            _animationName = AnimationNameSelect;
        }
        if (!string.IsNullOrEmpty(AnimationDurationSet))
        {
            _duration = AnimationDurationSet;
        }
        if (!string.IsNullOrEmpty(AnimationDelaySet))
        {
            _delay = AnimationDelaySet;
        }
        if (!string.IsNullOrEmpty(AnimationHappensOnce))
        {
            _once = AnimationHappensOnce;
        }
    }

    // Example of other parameters
