@page "/AddWorkout"
<PageTitle>AddWorkout</PageTitle>



<h1 class="modal-title m-5">Add Workout</h1>

<div class="container">
    <EditForm Model="Workout" OnValidSubmit="Save">
        <div style="max-width:900px" class="container-lg d-xl-inline-flex">
            <div class="container-md">
                <h5 class="card-title fs-3" >Workout Date</h5>
                <label for="WorkoutDate" class="form-label">Add Workout's Date</label>
                <InputDate id="WorkoutDate" @bind-Value="Workout.Date" />
                <h5 class="card-title fs-3">Workout Rounds</h5>
                <div>
                    @if (Workout.Rounds != null)
                    {
                        @foreach (Models.Round round in Workout.Rounds)
                        {
                            <div style="min-width:300px; max-width:600px;" class="m-3 p-3  border border-dark border-2 ">
                                @if (@round.Exercise != null && @round.Exercise.Name != null)
                                {
                                    <div class="card-title fs-4"> Round @round.RoundNumber : @round.Exercise.Name</div>
                                }
                                else
                                {
                                    <div class="card-title fs-4"> Round @round.RoundNumber</div>
                                }
                                <label class="m-1" for="RoundExercice">Choose Exercice</label>
                                @if (round.Exercise != null)
                                {
                                    <InputSelect style="min-width:100px;min-height:30px;" id="RoundExercice" @bind-Value="@round.Exercise.Name">
                                        @foreach (Models.Exercise exercice in exercises)
                                        {
                                            <option value="@exercice.Name">@exercice.Name</option>
                                        }
                                    </InputSelect>
                                }
                                <div>or</div>
                                <div class="m-2">
                                    <label for="AddExercise">Add a new Exercise</label>
                                    <InputText id="AddExercise" @bind-Value="Exercise.Name" />
                                    <button @onclick="AddExercise">Add Exercise</button>
                                </div>
                                
                                <div class="container-sm">
                                    <table class="table border border-dark border-1 table-bordered ">
                                    <thead>
                                        <tr>
                                            <th scope="col">Set</th>
                                            <th scope="col">Weight</th>
                                            <th scope="col">Reps</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (round.Sets != null)
                                        {
                                            foreach (Models.Set set in round.Sets)
                                            {
                                                <tr>
                                                    <th scope="row">@set.SetNumber</th>
                                                    <td><InputNumber id="SetWeight" @bind-Value="set.Weight" /></td>
                                                    <td><InputNumber id="SetReps" @bind-Value="set.Reps" /></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                                </div>
                                <button @onclick="@(() => AddSet(round))">Add a new Set</button>
                            </div>
                        }
                    }
                </div>
                <div class="m-2">
                    <button @onclick="AddRound">Add a new round</button>
                </div>
            </div>
            
        </div>
       
    </EditForm>
</div>

<h3 class="mt-5">Workout in : @Workout.Date</h3>
    @if (Workout.Rounds != null)
    {
        <div style="max-width:400px;" class="container">
            @foreach (var round in Workout.Rounds)
            {
                if (round.Exercise != null)
                {
                    <h4>@round.Exercise.Name</h4>
                }
                if (round.Sets != null)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Set</th>
                                <th scope="col">Weight</th>
                                <th scope="col">Reps</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                                @foreach (var set in round.Sets)
                                {
                                <tr>
                                    <th scope="row">@set.SetNumber</th>
                                    <td>@set.Weight Kg</td>
                                    <td>@set.Reps rep</td>
                                </tr>
                                }
                            

                        </tbody>
                    </table>
                }
            }
        </div>
    }
    

@code {
    Models.Workout Workout = new();
    Models.Exercise Exercise = new();

    List<Models.Exercise> exercises = new()
    {
        new Models.Exercise()
        {
            Name="BenchPress"
        },
        new Models.Exercise()
        {
            Name="Squat"
        },
        new Models.Exercise()
        {
            Name="Deadlift"
        },
        new Models.Exercise()
        {
            Name="RomanianDeadlift"
        },
    };
    int roundN = 0;
    int setN = 0;

    private void AddRound()
    {
        Models.Round round = new();
        if (Workout.Rounds == null)
        {
            roundN = 1;
            Workout.Rounds = new List<Models.Round>();
        }
        round.RoundNumber = Workout.Rounds.Count + 1;
        round.Exercise = new Models.Exercise();
        Workout.Rounds.Add(round);
    }
    private void AddExercise()
    {
        Models.Exercise exercise = new();
        if (exercises == null)
        {
            exercises = new List<Models.Exercise>();
        }
        exercise= Exercise;
        exercises.Add(exercise);
    }


    private void AddSet(Models.Round round)
    {
        Models.Set set = new();

        //set.Weight = 0;
        //set.Reps = 0;
        if (round.Sets == null)
        {
            round.Sets = new List<Models.Set>();
            set.SetNumber = 1;
        }
        else
        {
            set.SetNumber = round.Sets.Count+1;

        }
        round.Sets.Add(set);
    }




    private void Save()
    {

    }
}
