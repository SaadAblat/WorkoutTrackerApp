@page
@model WorkoutTrackerWebsite.Areas.Identity.Pages.Account.LoginModel
@{
}
<div class="col-xs-1 " align="center">

    <div class="col-md-4 text-start" style="max-width:500px">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in</h2>
                <ht />
                <div asp-validation-summary="ModelOnly" class="text-danger" aria-required="true"></div>
                <div>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.Name" class="form-label"></label>

                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div  >
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-4">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>
